<%= render 'shared/errors',obj: @user %>

<div class="py-5">
  <div class="row">
      <div class ="col-md-12">
       <%= form_for( @user, :html => {class:"form-horizontal",role: "form"}) do |f|%>
         <div class="form-group row">
            <div class="control-label col-sm-1">
            <%= f.label :username, class: "col-sm-2 col-form-label" %>
            </div>
            <div class="col-sm-4">
            <%= f.text_field  :username ,class: "form-control", placeholder: "Enter username", autofocus: true  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="control-label col-sm-1">
            <%= f.label :email, class: "col-sm-2 col-form-label" %>
          </div>
          <div class="col-sm-4">
            <%= f.email_field  :email ,class: "form-control", placeholder: "Enter email", autofocus: true  %>
          </div>
        </div>

         <div class="form-group row">
            <div class="control-label col-sm-1">
            <%= f.label  :password, class: "col-sm-2 col-form-label" %>
            </div>
            <div class="col-sm-4">
            <%= f.password_field  :username ,class: "form-control", placeholder: "Enter username", autofocus: true  %>
            </div>
          </div>


        <%= f.submit "Create user"%>
        <%end%>
      </div>
  </div>
</div>
  
