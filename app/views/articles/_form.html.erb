

<div class="py-5">
  <div class="row">
      <div class ="col-md-12">
       <%= form_for( @article, :html => {class:"form-horizontal",role: "form"}) do |f|%>
         <div class="form-group row">
            <div class="control-label mr-5 col-sm-1">
            <%= f.label :title, class: "col-sm-4 col-form-label uppcase text-uppercase" %>
            </div>
            <div class="col-sm-6">
            <%= f.text_field  :title ,class: "form-control",  autofocus: true  %>
            </div>
          </div>

          <div class="form-group row">
            <div class="control-label mr-5 col-sm-1">
            <%= f.label :description, class: "col-sm-4 col-form-label text-uppercase" %>
          </div>
          <div class="col-sm-6">
            <%= f.text_area :description, row: 20 ,class: "form-control", autofocus: true  %>
          </div>
        </div>

        <%= f.submit "Create article", class:"btn btn-primary btn-lg"%>
        <%end%>
      </div>
  </div>
</div>


  
