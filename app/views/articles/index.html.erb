<h1  class="text-center mt-5 text-uppercase">All the articles </h1>
<% @articles.each do |article|%>
  <div class = "row">
			<div class = "card">
				<div class = "article-title">
				<%=link_to article.title,  article_path(article)%>  
			</div>
			<div class="card-body">
				<%= truncate(article.description,length: 100)%>
				<small class="time"> Created at <%= article.created_at %></small>
				<small class="time"> By: <%= article.user.username %></small>
			</div>
				<div class = "article-actions">
					<%= link_to 'Edit article', edit_article_path(article), class: "btn btn-xs btn-primary" %> 
					<%= link_to 'Delete the article', article_path(article),class: "btn btn-xs btn-danger" ,  method: :delete, data: { confirm: 'Are you sure?' } %> 
				</div>
	
		</div>
	 </div>
<%end%>


