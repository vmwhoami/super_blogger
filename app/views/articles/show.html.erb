<h1>Show selected article</h1>
<% if @article.user%>
<div class = "card">
  <div class="card-body">
  <%= gravatar_for(@article.user) %>
  <h5 class="card-title">Username: <%=@article.user.username%></h5>
 <ul class="list-group list-group-flush">
   
   <li class="list-group-item">User email: <%=@article.user.email%></li>
   <li class="list-group-item">Go to  <%= link_to "#{@article.user.username}", user_path(@article.user) %> </li>

  </ul>
</div>
</div>
<%end%>
<h3 class ="pl-3"> <%= @article.title%> </h3>
<p class = "mx-5"> <%= @article.description %></p>

<p class= "mx-5">
<%= link_to 'All articles', articles_path %>
<p>
<p class= "mx-5">
<% if logged_in? && current_user == @article.user %>
<%= link_to 'edit', edit_article_path %>
<%= link_to  'delete', article_path, method: :delete %>
<%end%>
<p>