<h1 align = "center"> Login</h1>

  <div class="row">
      <div class ="col-md-12">
       <%= form_for( :session, :html => {class:"form-horizontal",role: "form"}, url: login_path) do |f|%>
       

          <div class="form-group row">
            <div class="control-label col-sm-1">
            <%= f.label :email, class: "col-sm-2 col-form-label" %>
          </div>
          <div class="col-sm-4">
            <%= f.email_field  :email ,class: "form-control", placeholder: "Enter email", autofocus: true  %>
          </div>
        </div>

         <div class="form-group row">
            <div class="control-label col-sm-1">
            <%= f.label  :password, class: "col-sm-2 col-form-label" %>
            </div>
            <div class="col-sm-4">
            <%= f.password_field  :password ,class: "form-control", placeholder: "Enter password", autofocus: true  %>
            </div>
          </div>

        <%= f.submit "Login" , class: "btn btn-danger ml-5"%>
        <%end%>
      </div>
  </div>